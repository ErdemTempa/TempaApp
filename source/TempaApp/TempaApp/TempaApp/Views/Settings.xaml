             xmlns:viewmodels="clr-namespace:TempaApp.ViewModels"
             xmlns:model="clr-namespace:TempaApp.Models"
             xmlns:mvvm="clr-namespace:MvvmHelpers;assembly=MvvmHelpers"
             x:DataType="viewmodels:SettingsViewModel"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit" 
             Title="X-TYPE SMART / Settings"
             x:Class="TempaApp.Views.Settings">

    <ContentPage.BindingContext>
        <viewmodels:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem x:Name="imgConnection" IconImageSource ="{Binding ConnectionIcon}"/>-->
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This page is for autorized person only!"
